generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WordStatus {
  NEW
  HARD
  EASY
}

model Word {
  id            String       @id @default(cuid())
  term          String       @unique
  definition    String?
  example       String?
  translation String?
  status        WordStatus   @default(NEW)
  lastSeenAt    DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  reviews       WordReview[]
}

model WordReview {
  id          String     @id @default(cuid())
  wordId      String
  wasCorrect  Boolean
  statusAfter WordStatus
  createdAt   DateTime   @default(now())

  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@index([wordId, createdAt])
}

model InterviewQA {
  id        String   @id @default(cuid())
  question  String
  answer    String?
  timesAnswered Int      @default(0)
  timesCorrect  Int      @default(0)
  timesIncorrect Int    @default(0)
  timesShown     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WordTrainingStats {
  id        Int     @id @default(autoincrement())
  accuracy  Float
  accuracy100 Float @default(0)
  totalAnswers Int
  totalWords   Int
  createdAt DateTime @default(now())
}

model RecapTrainingStats {
  id        Int     @id @default(autoincrement())
  score     Int
  coverage  Float
  structure Float
  language  Float
  fluency   Float
  createdAt DateTime @default(now())
}

model DailyLesson {
  id           String   @id @default(cuid())
  dateKey      String
  profile      String   @default("standard")
  startedAt    DateTime?
  completedAt  DateTime?
  status       String   @default("planned")
  planJson     Json
  progressJson Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([dateKey])
}

model FluencyAttempt {
  id                  String   @id @default(cuid())
  mode                String
  prompt              String
  targetPattern       String?
  transcript          String?
  verdict             String?
  score               Float?
  timeToFirstWordMs   Int?
  speechRateWpm       Float?
  longPauseCount      Int?
  selfCorrectionCount Int?
  feedbackJson        Json?
  createdAt           DateTime @default(now())
}

model FluencyError {
  id                String   @id @default(cuid())
  source            String
  errorType         String
  wrongFragment     String
  suggestedFragment String
  isResolved        Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model AppEvent {
  id          String   @id @default(cuid())
  eventName   String
  route       String?
  payloadJson Json?
  createdAt   DateTime @default(now())
}
