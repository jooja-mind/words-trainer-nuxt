generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WordStatus {
  NEW
  HARD
  EASY
}

model Word {
  id         String       @id @default(cuid())
  term       String       @unique
  definition String?
  example    String?
  status     WordStatus   @default(NEW)
  lastSeenAt DateTime?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  reviews    WordReview[]
}

model WordReview {
  id          String     @id @default(cuid())
  wordId      String
  wasCorrect  Boolean
  statusAfter WordStatus
  createdAt   DateTime   @default(now())

  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@index([wordId, createdAt])
}
